public class MyClass {
  public static void main(String args[]) {

    // Declaração das variáveis que vão armazenar as notas e a média
    double Nota1;
    double Nota2;
    double Nota3;
    double Media;

    // Atribuição de valores às notas
    Nota1 = 6;
    Nota2 = 4;
    Nota3 = 7;

    // Cálculo da média aritmética (soma das notas dividido por 3)
    Media = (Nota1 + Nota2 + Nota3) / 3;

    // Exibição da média no console
    System.out.println("A sua média é: " + Media);
  }
}
